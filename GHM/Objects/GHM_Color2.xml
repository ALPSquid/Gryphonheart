<Ui xmlns="http://www.blizzard.com/wow/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui">
    <Frame name="GHM_Color2_Template" virtual="true">
        <Size>
            <AbsDimension x="180" y="180"/>
        </Size>
        <Frames>
			<Frame name="$parentText" inherits="GHM_TextLabel_Template">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="0" y="5"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Frame>
			<Frame name="$parentArea">
				   <Anchors>
					   <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
						   <Offset>
							   <AbsDimension x="0" y="0"/>
						   </Offset>
					   </Anchor>
					   <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT">
						   <Offset>
							   <AbsDimension x="0" y="0"/>
						   </Offset>
					   </Anchor>
				   </Anchors>
				   <Frames>
						<Button name="$parentDD" inherits="UIPanelSquareButton">
							<Size>
								<AbsDimension x="22" y="22"/>
							</Size>
							<Anchors>
								<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
									<Offset x="-4" y="0"/>
								</Anchor>
							</Anchors>
							<Scripts>
								<OnClick>
									PlaySound("igMainMenuOptionCheckBoxOn");
								</OnClick>
								<OnLoad>
									SquareButton_SetIcon(self, "DOWN")
								</OnLoad>
							</Scripts>
						</Button>
						<ColorSelect name="$parentColorPicker">
							<Size>
								<AbsDimension x="160" y="100"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT" relativePoint="TOPLEFT">
									<Offset>
										<AbsDimension x="0" y="-24"/>
									</Offset>
								</Anchor>
							</Anchors>
							<Layers>
								<Layer level="ARTWORK">
									<Texture name="$parentColorSwatch">
										<Size>
											<AbsDimension x="24" y="96"/>
										</Size>
										<Anchors>
											<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
												<Offset>
													<AbsDimension x="0" y="0"/>
												</Offset>
											</Anchor>
										</Anchors>
									</Texture>
								</Layer>
							</Layers>
							<ColorWheelTexture name="$parentColorPickerWheel">
								<Size>
									<AbsDimension x="96" y="96"/>
								</Size>
								<Anchors>
									<Anchor point="TOPLEFT">
										<Offset>
											<AbsDimension x="0" y="0"/>
										</Offset>
									</Anchor>
								</Anchors>
							</ColorWheelTexture>
							<ColorWheelThumbTexture file="Interface\Buttons\UI-ColorPicker-Buttons">
								<Size>
									<AbsDimension x="10" y="10"/>
								</Size>
								<TexCoords left="0" right="0.15625" top="0" bottom="0.625"/>
							</ColorWheelThumbTexture>
							<ColorValueTexture>
								<Size>
									<AbsDimension x="16" y="96"/>
								</Size>
								<Anchors>
									<Anchor point="LEFT" relativeTo="$parentColorPickerWheel" relativePoint="RIGHT">
										<Offset>
											<AbsDimension x="16" y="0"/>
										</Offset>
									</Anchor>
								</Anchors>
							</ColorValueTexture>
							<ColorValueThumbTexture file="Interface\Buttons\UI-ColorPicker-Buttons">
								<Size>
									<AbsDimension x="24" y="7"/>
								</Size>
								<TexCoords left="0.25" right="1.0" top="0" bottom="0.875"/>
							</ColorValueThumbTexture>
						</ColorSelect>
			
						<Frame name="$parentR" inherits="GHM_EditBox_Template">
							<Size>
								<AbsDimension x="55" y="40"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parentColorPicker">
									<Offset>
										<AbsDimension x="0" y="-10"/>
									</Offset>
								</Anchor>
							</Anchors>
							<Scripts>
								<OnLoad>
									local box = _G[self:GetName().."Box"];
									box:SetTextureTheme("Tooltip");
									box:SetWidth(self:GetWidth());
									box.numbersOnly = true;
			
									local OnEditBoxTextChanged = function(self)
									end
									box:SetScript("OnTextChanged", OnEditBoxTextChanged);
			
									local text = _G[self:GetName().."TextLabel"];
									text:SetText("R:");
									local textFrame = _G[self:GetName().."Text"];
									textFrame:SetWidth(text:GetStringWidth()+2)
								</OnLoad>
								<OnEscapePressed>
									self:Clear();
								</OnEscapePressed>
							</Scripts>
						</Frame>
						<Frame name="$parentG" inherits="GHM_EditBox_Template">
							<Size>
								<AbsDimension x="55" y="40"/>
							</Size>
							<Anchors>
								<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentR">
									<Offset>
										<AbsDimension x="4" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
							<Scripts>
								<OnLoad>
									local box = _G[self:GetName().."Box"];
									box:SetTextureTheme("Tooltip");
									box:SetWidth(self:GetWidth());
									box.numbersOnly = true;
			
									local OnEditBoxTextChanged = function(self)
									end
									box:SetScript("OnTextChanged", OnEditBoxTextChanged);
			
									local text = _G[self:GetName().."TextLabel"];
									text:SetText("G:");
									local textFrame = _G[self:GetName().."Text"];
									textFrame:SetWidth(text:GetStringWidth()+2)
								</OnLoad>
								<OnEscapePressed>
									self:Clear();
								</OnEscapePressed>
							</Scripts>
						</Frame>
						
						<Frame name="$parentB" inherits="GHM_EditBox_Template">
							<Size>
								<AbsDimension x="55" y="40"/>
							</Size>
							<Anchors>
								<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentG">
									<Offset>
										<AbsDimension x="4" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
							<Scripts>
								<OnLoad>
									local box = _G[self:GetName().."Box"];
									box:SetTextureTheme("Tooltip");
									box:SetWidth(self:GetWidth());
									box.numbersOnly = true;
			
									local OnEditBoxTextChanged = function(self)
									end
									box:SetScript("OnTextChanged", OnEditBoxTextChanged);
			
									local text = _G[self:GetName().."TextLabel"];
									text:SetText("B:");
									local textFrame = _G[self:GetName().."Text"];
									textFrame:SetWidth(text:GetStringWidth()+2)
								</OnLoad>
								<OnEscapePressed>
									self:Clear();
								</OnEscapePressed>
							</Scripts>
						</Frame>
					 </Frames>
			</Frame>
		</Frames>
    </Frame>
</Ui>